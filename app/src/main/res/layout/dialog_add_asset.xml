<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"

    android:layout_marginHorizontal="20dp">

    <TextView
        android:layout_marginTop="30dp"
        style="@style/TextTitleLarge"
        android:gravity="center"
        android:text="자산선택"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:id="@+id/bt_crypto"
            android:text="크립토"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@drawable/bg_add_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bt_stock"
            app:layout_constraintWidth_percent="0.4"

            app:layout_constraintDimensionRatio="1:1"
            >
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_crypto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/icon_cryto"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:text="크립토"
                style="@style/TextTitleMedium"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/icon_cryto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bt_stock"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bt_crypto"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintDimensionRatio="1:1"

            android:background="@drawable/bg_add_button"
            >
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_stock"
                android:id="@+id/icon_stock"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView

                android:text="주식"
                style="@style/TextTitleMedium"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/icon_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bt_cash"
            android:text="현금"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/bt_crypto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bt_gold"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintDimensionRatio="1:1"


            android:background="@drawable/bg_add_button"
            >
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_cash"

                    android:id="@+id/icon_cash"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="현금"
                    style="@style/TextTitleMedium"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/icon_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bt_gold"
            android:text="기타"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/bt_crypto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bt_cash"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintDimensionRatio="1:1"
            android:background="@drawable/bg_add_button"
            >
            <ImageView
                android:src="@drawable/icon_gold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/icon_gold"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:text="금"
                style="@style/TextTitleMedium"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/icon_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>